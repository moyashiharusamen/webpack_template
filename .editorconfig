root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 0

[*.js]
indent_size = space
indent_size = 4

[*.scss]
indent_size = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = space
indent_size = 4
